<section class="modal modal-login visually-hidden">
  <h2>Личный кабинет</h2>
  <p class="modal-description">Введите логин и пароль для входа</p>
  <form action="/login" method="post" class="login-form">

    <div class="modal-top-login">
      <p>
        <label for="login" class="your-name visually-hidden">Логин</label>
        <input id="login" class="login-user" type="email" name="email" placeholder="email@example.com">
      </p>
      <p>
        <label for="password" class=" visually-hidden">Ваш пароль:</label>
        <input id="password" class="name-user" type="password" name="password" placeholder="••••••••">
      </p>
    </div>
    <div class="login-help-container">
      <div class="login-help">
        <label class="login-checkbox">
          <input class="visually-hidden" type="checkbox" name="remember">
          <span class="checkbox-indicator"></span>
          Запомните меня
        </label>
        <a class="restore" href="#">Я забыл пароль!</a>
      </div>
    </div>
    <div class="modal-button-submit">
      <button class="button" type="submit">Войти</button>
    </div>
    <button class="modal-close" type="button" aria-label="Закрыть"></button>
  </form>
</section>
